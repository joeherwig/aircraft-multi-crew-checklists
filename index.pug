extends templates/layout.pug

block meta
  title Multi-crew (SOP) checklist
  meta(name="description" content="my blog about building a home cockpit")
  meta(name="keywords" content="homecockpit, home cockpit, blog, building")
block scripts
  script(src="js/checklist.js")
  //script(src="js/test.js")

block header 
  //img(src="./img/header.jpg" alt="cockpit view from 747 to LA")
  style. 
    .intro {
      //display: none;
    }
    .item {
      display: flex;
      padding: 2em 0 1em 5px;
    }
    .item .triggeredBy {
      text-align: right;
    }
    .item .check {
      flex: 3 1 auto;
      overflow: hidden;
      white-space: nowrap;
    }
    .item .check:after {
      font-family: Monospace;
      opacity: 0.25;
      content: " ..........................................................................................................................................";
    }
    .item .value {
      flex: 1 1 auto;
      padding-left: 1em;
    }
    .item .value:after {
      padding-left: 5px;
      color: #333333;
      content: "☐";
    }

    .item.completed {
      opacity: 0.5;
      color: #517051;
    }
    .item.completed .value:after {
      text-decoration: none;
      content: "☑";
      color: beige;
    }

    .pf {
      border-left: 2px solid #ff00ff75;
    }

    .pm {
      border-left: 2px solid #ffff00b0;
    }


block content
  joeherwig-checklist
